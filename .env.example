# Database configuration
DATABASE_URL=sqlite:./data/fulgurant.db

# SMTP configuration
SMTP_HOST=smtp.mail.ovh.net
SMTP_PORT=587
SMTP_LOGIN=mail@site.tld
SMTP_PASSWORD='PasswordWithQuoteForSpecialCharacters'

# Server configuration
IS_PROD=false
SHARE_VALIDITY_DAYS=3
CAN_REGISTER=true
MAX_SHARES_BY_USER=2

# Network configuration
BIND_HOST=127.0.0.1  # Use 0.0.0.0 to accept connections from any interface (production)
BIND_PORT=3000       # Port to listen on

# TLS/HTTPS configuration (optional - server runs HTTP if not configured)
# TLS_CERT_PATH=certs/cert.pem  # Path to TLS certificate file
# TLS_KEY_PATH=certs/key.pem    # Path to TLS private key file

# Logging configuration
RUST_LOG=Fulgurant=debug,tower_http=debug,sqlx=info
LOG_FOLDER=logs